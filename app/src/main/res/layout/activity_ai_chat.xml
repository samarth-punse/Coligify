<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true">

    <!-- ================= MAIN CHAT SCREEN ================= -->

    <RelativeLayout
        android:id="@+id/llaichat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:fitsSystemWindows="true">

        <!-- ================= TOP BAR ================= -->

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="17dp"
                android:src="@drawable/back_button"
                app:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Gemini"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- THREE DOT MENU -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/three_dots"
                app:tint="@color/black" />
        </LinearLayout>

        <!-- ================= CHAT CONTENT ================= -->

        <ScrollView
            android:id="@+id/contentScroll"
            android:layout_below="@id/topBar"
            android:layout_above="@id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/chatContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- ================= BOTTOM INPUT BAR ================= -->

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#C1BDBD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <!-- ADD BUTTON -->
                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/add"
                    app:tint="@color/black" />

                <!-- MESSAGE INPUT -->
                <EditText
                    android:id="@+id/etPrompt"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Ask Gemini..."
                    android:textColor="@color/black"
                    android:textColorHint="#2C2C2C"
                    android:textSize="16sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="center_vertical"
                    android:maxLines="4"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionSend"/>

                <!-- MIC -->
                <ImageView
                    android:id="@+id/btnMic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="@color/black" />

                <!-- SEND -->
                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:src="@android:drawable/ic_menu_send"
                    android:visibility="gone"
                    app:tint="@color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <!-- ================= CHAT HISTORY DRAWER (ROUNDED) ================= -->

    <!-- ================= CHAT HISTORY DRAWER (ROUNDED + SCROLLABLE) ================= -->

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:cardCornerRadius="22dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#121212">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- HEADER (FIXED, NOT SCROLLING) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your chats"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#2A2A2A"/>
            </LinearLayout>

            <!-- SCROLLABLE AREA -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHistory"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:clipToPadding="false"
                android:scrollbars="none"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.drawerlayout.widget.DrawerLayout>