<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Image Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/registration_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="70dp"
                        android:layout_gravity="start"
                        android:contentDescription="logo"
                        android:src="@drawable/logog1" />

                    <TextView
                        android:layout_marginTop="100dp"
                        android:text="Ace your exam with AI bot Rodie,\nTop your exam with ease."
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <TextView
                        android:layout_marginTop="4dp"
                        android:text="Beyond Earth's grasp"
                        android:textColor="#DDFFFFFF"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                </LinearLayout>
            </FrameLayout>

            <!-- White Card Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_round_white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Create Account"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <!-- Google & Facebook -->
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Sign up with Google"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_google" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="with Facebook"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:background="@drawable/btn_facebook"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="16dp"
                    android:text="—  Or sign up using your email address  —"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <!-- Input Fields -->
                <EditText
                    android:layout_marginTop="16dp"
                    android:hint="Name"
                    android:background="@drawable/edit_light"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    />

                <EditText
                    android:layout_marginTop="12dp"
                    android:hint="Email or Phone no."
                    android:background="@drawable/edit_light"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <EditText
                    android:layout_marginTop="12dp"
                    android:hint="Username"
                    android:background="@drawable/edit_light"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <EditText
                    android:layout_marginTop="12dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_light"
                    android:padding="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <!-- Checkbox -->
                <CheckBox
                    android:layout_marginTop="12dp"
                    android:text="I agree to all terms and Privacy Policy"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <!-- Sign Up Button -->
                <Button
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Sign up"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/btn_gradient" />

                <TextView
                    android:layout_marginTop="14dp"
                    android:text="Already have an account? Log in"
                    android:textSize="13sp"
                    android:textColor="#444444"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>